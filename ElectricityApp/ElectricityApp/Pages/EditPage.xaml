<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmolels="clr-namespace:ElectricityApp.ViewModels"
             xmlns:controls="clr-namespace:ElectricityApp.Controls"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ElectricityApp.Pages.EditPage"
             x:DataType="viewmolels:EditViewModel"
             Shell.PresentationMode="ModalAnimated">
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior 
            StatusBarColor="{StaticResource DarkGreen}" 
            StatusBarStyle="LightContent"/>
    </ContentPage.Behaviors>
    
    <VerticalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <Label
            FontSize="20"
            FontAttributes="Bold"
            Text="{Binding Consumption.Date, StringFormat='Редагування: {0:MMMM yyyy}'}"/>
        
        <Label
            Text="Спожито кВт/год"
            FontSize="18"/>
        <Label
            Text="День"/>

        <controls:StepperWithInput
            Value="{Binding DayKilowattConsumed}"
            Minimum="0"
            Maximum="10000"
            Increment="1"/>

        <Label
            Text="Ніч:"/>

        <controls:StepperWithInput
            Value="{Binding NightKilowattConsumed}"
            Minimum="0"
            Maximum="10000"
            Increment="1"/>

        <Label
            Text="Ціна за кВт/год"
            Margin="0,15,0,0"/>

        <controls:StepperWithInput
            Value="{Binding KilowattPerHourPrice}"
            Minimum="0.0"
            Maximum="100"
            Increment=".01"/>
        
        <Grid
            Margin="0,10,0,0"
            ColumnDefinitions="*,*"
            ColumnSpacing="10">
            <Button
                HeightRequest="40"
                Text="Назад"
                Command="{Binding GoToBackCommand}"/>
            
            <Button
                Grid.Column="1"
                HeightRequest="40"
                Text="Оновити запис"
                Command="{Binding UpdateCommand}"/>
        </Grid>
        
    </VerticalStackLayout>
</ContentPage>