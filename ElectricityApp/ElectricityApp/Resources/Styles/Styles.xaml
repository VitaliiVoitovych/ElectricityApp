<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:ElectricityApp.Converters">

    <!-- Fix this-->
    <converters:DateOnlyConverter x:Key="DateOnlyConverter"/>

    <Style TargetType="TabBar">
        <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource PrimaryDark}"/>
        <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource Light}"/>
        <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource Light}"/>
        <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource Light}"/>
    </Style>
    
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Background" Value="{StaticResource DarkGreenBrush}"/>
    </Style>

    <Style TargetType="ScrollView">
        <Setter Property="HorizontalScrollBarVisibility" Value="Never"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Never"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Light}"/>
    </Style>
    
</ResourceDictionary>
