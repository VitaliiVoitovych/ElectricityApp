<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:controls="clr-namespace:ElectricityApp.Controls"
             x:Class="ElectricityApp.Controls.QRCodePopup"
             x:Name="QrCodePopup">
    <toolkit:Popup.Resources>
        <Style TargetType="{x:Type controls:QRCodePopup}">
            <Setter Property="VerticalOptions" Value="Start"/>
            <Setter Property="Color" Value="{StaticResource DarkGreen}"/>
        </Style>
    </toolkit:Popup.Resources>
    <VerticalStackLayout
        VerticalOptions="Center"
        Padding="10"
        Spacing="15">
        
        <Label
            Text="Поділитися застосунком"
            FontSize="24"
            FontAttributes="Bold"
            VerticalTextAlignment="Center"/>

        <Image
            x:Name="QrImage"
            WidthRequest="250"
            HeightRequest="250"/>

        <Button
            Text="Гаразд"
            Clicked="OkButtonClicked"/>
        
    </VerticalStackLayout>
</toolkit:Popup>
